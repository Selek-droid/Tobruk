	if turn == 27 {oUIBar.date = "Feb. 24, 1941";}
	if turn == 28 {oUIBar.date = "Feb. 27, 1941";}
	if turn == 29 {oUIBar.date = "Mar. 2, 1941";}
	if turn >= 30 {oUIBar.date = "Spring, 1941";}
	
}