function DisplayDate(turn)
{
	if turn == 1 {oUIBar.date = "Dec. 8, 1940";}
	if turn == 2 {oUIBar.date = "Dec. 11 1940";}
	if turn == 3 {oUIBar.date = "Dec. 14, 1940";}
	if turn == 4 {oUIBar.date = "Dec. 17, 1940";}
