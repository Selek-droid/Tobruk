	if turn == 8 {oUIBar.date = "Dec. 29, 1940";}
	if turn == 9 {oUIBar.date = "Jan. 1, 1941";}
	if turn == 10 {oUIBar.date = "Jan. 4, 1941";}
	if turn == 11 {oUIBar.date = "Jan. 7, 1941";}
	if turn == 12 {oUIBar.date = "Jan. 10, 1941";}
	if turn == 13 {oUIBar.date = "Jan. 13, 1941";}
	if turn == 14 {oUIBar.date = "Jan. 16, 1941";}
	if turn == 15 {oUIBar.date = "Jan. 19, 1941";}
	if turn == 16 {oUIBar.date = "Jan. 22, 1941";}
	if turn == 17 {oUIBar.date = "Jan. 25, 1941";}
